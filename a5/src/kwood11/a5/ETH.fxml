<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kwood11.a5.ETHController">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <ImageView fx:id="btnBackArrow" fitHeight="92.0" fitWidth="68.0" onMouseClicked="#OnBackArrowClicked" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Images/BackArrow.png" />
                    </image>
                    <effect>
                        <ColorAdjust brightness="-1.0" hue="0.49" saturation="1.0" />
                    </effect>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ImageView>
                <ImageView fitHeight="83.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="RIGHT">
                    <image>
                        <Image url="@Images/Ethereum.png" />
                    </image>
                    <GridPane.margin>
                        <Insets left="300.0" />
                    </GridPane.margin>
                </ImageView>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </GridPane>
    </top>
    <center>
        <LineChart title="Ethereum Price Over Time" BorderPane.alignment="CENTER">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </LineChart>
    </center>
</BorderPane>
